<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/icon_log_loging"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loging_log_topmarging" />

    <LinearLayout
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/baise"
            android:id="@+id/activity_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:imeOptions="actionNext"
            android:background="@drawable/edittext_loging_back" />

        <EditText
            android:imeOptions="actionDone"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/baise"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/edittext_loging_back"
            android:inputType="textPassword"
            android:id="@+id/activity_login_password"
            android:layout_width="match_parent" />

        <Button
            android:textColor="@color/baise"
            android:layout_marginTop="10dp"
            android:background="@drawable/selecter_themecolor_circlr_button"
            android:text="@string/login"
            android:id="@+id/activity_login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/baise"
                android:layout_marginTop="20dp"
                android:text="@string/regist"
                android:layout_alignParentLeft="true"
                android:id="@+id/activity_login_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/baise"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="@string/forgotpassword"
                android:id="@+id/activity_login_frogotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>