<resources>

    <!-- 自定义titleBar属性 -->
    <declare-styleable name="titlebar">

        <!-- 标题文字 -->
        <attr name="titleText" format="string" />
        <!-- 左边图片 -->
        <attr name="leftDrawable" format="reference" />
        <!-- 右边图片 -->
        <attr name="rightDrawable" format="reference" />
        <!-- 右边文字 -->
        <attr name="rightText" format="string" />
        <!-- 右边文字颜色 -->
        <attr name="rightTextColor" format="color" />
        <!-- 展示类型 -->
        <attr name="showtype" format="integer">
            <flag name="none" value="1" />
            <flag name="left" value="2" />
            <flag name="right" value="3" />
            <flag name="both" value="4" />
        </attr>
    </declare-styleable>

</resources>